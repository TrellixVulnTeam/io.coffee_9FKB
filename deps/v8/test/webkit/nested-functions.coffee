# Test cases deliberately nested!
runTests = ->
  
  # Formating of these functions is significant for regression
  # testing; functions with small bodies are not cached!
  test1 = ->
    this
  test2 = ->
    "use strict"
    this
  test3 = ->
    (if this then "OKAY" else "Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.")
  test4 = ->
    "use strict"
    (if not this then "OKAY" else "Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.")
  passed1 = test1() is this
  passed2 = test2() is `undefined`
  passed3 = test3() is "OKAY"
  passed4 = test4() is "OKAY"
  return
description "This test ensures that properties of nested function code are not lost (due to cached function info)."
passed1 = false
passed2 = false
passed3 = false
passed4 = false
runTests()
shouldBeTrue "passed1"
shouldBeTrue "passed2"
shouldBeTrue "passed3"
shouldBeTrue "passed4"
