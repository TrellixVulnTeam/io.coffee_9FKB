test = require("tape")
parse = require("../")
test "boolean default true", (t) ->
  argv = parse([],
    boolean: "sometrue"
    default:
      sometrue: true
  )
  t.equal argv.sometrue, true
  t.end()
  return

test "boolean default false", (t) ->
  argv = parse([],
    boolean: "somefalse"
    default:
      somefalse: false
  )
  t.equal argv.somefalse, false
  t.end()
  return

