parse = require("../")
test = require("tape")
test "-", (t) ->
  t.plan 5
  t.deepEqual parse([
    "-n"
    "-"
  ]),
    n: "-"
    _: []

  t.deepEqual parse(["-"]),
    _: ["-"]

  t.deepEqual parse(["-f-"]),
    f: "-"
    _: []

  t.deepEqual parse([
    "-b"
    "-"
  ],
    boolean: "b"
  ),
    b: true
    _: ["-"]

  t.deepEqual parse([
    "-s"
    "-"
  ],
    string: "s"
  ),
    s: "-"
    _: []

  return

test "-a -- b", (t) ->
  t.plan 3
  t.deepEqual parse([
    "-a"
    "--"
    "b"
  ]),
    a: true
    _: ["b"]

  t.deepEqual parse([
    "--a"
    "--"
    "b"
  ]),
    a: true
    _: ["b"]

  t.deepEqual parse([
    "--a"
    "--"
    "b"
  ]),
    a: true
    _: ["b"]

  return

