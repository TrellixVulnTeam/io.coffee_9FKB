mkdirp = require("../")
path = require("path")
fs = require("fs")
test = require("tap").test
test "root", (t) ->
  
  # '/' on unix, 'c:/' on windows.
  file = path.resolve("/")
  mkdirp file, 0755, (err) ->
    throw err  if err
    fs.stat file, (er, stat) ->
      throw er  if er
      t.ok stat.isDirectory(), "target is a directory"
      t.end()
      return

    return

  return

