read = require("../lib/read.js")
read
  prompt: "Username: "
  default: "test-user"
, (er, user) ->
  read
    prompt: "Password: "
    default: "test-pass"
    silent: true
  , (er, pass) ->
    read
      prompt: "Password again: "
      default: "test-pass"
      silent: true
    , (er, pass2) ->
      console.error
        user: user
        pass: pass
        verify: pass2
        passMatch: (pass is pass2)

      console.error "the program should exit now"
      return

    return

  return

