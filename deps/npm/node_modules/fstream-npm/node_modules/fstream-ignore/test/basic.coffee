IgnoreFile = require("../")

# set the ignores just for this test
c = require("./common.js")
c.ignores "a/.basic-ignore": [
  "b/"
  "aca"
]

# the files that we expect to not see
notAllowed = [
  /^\/a\/b\/.*/
  /^\/a\/.*\/aca$/
]
require("tap").test "basic ignore rules", (t) ->
  t.pass "start"
  IgnoreFile(
    path: __dirname + "/fixtures"
    ignoreFiles: [".basic-ignore"]
  ).on("ignoreFile", (e) ->
    console.error "ignore file!", e
    return
  ).on("child", (e) ->
    p = e.path.substr(e.root.path.length)
    notAllowed.forEach (na) ->
      t.dissimilar p, na
      return

    return
  ).on "close", t.end.bind(t)
  return

