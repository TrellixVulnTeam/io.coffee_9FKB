onIgnoreFile = (e) ->
  console.error "adding ignore file", e.path
  return
Ignore = require("../")
Ignore(
  path: __dirname
  ignoreFiles: [
    ".ignore"
    ".gitignore"
  ]
).on("child", (c) ->
  console.error c.path.substr(c.root.path.length + 1)
  c.on "ignoreFile", onIgnoreFile
  return
).on "ignoreFile", onIgnoreFile
