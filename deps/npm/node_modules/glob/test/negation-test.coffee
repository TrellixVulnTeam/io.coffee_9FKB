# Negation test
# Show that glob respect's minimatch's negate flag
glob = require("../glob.js")
test = require("tap").test
test "glob respects minimatch negate flag when activated with leading !", (t) ->
  expect = [
    "abcdef/g"
    "abcfed/g"
    "c/d"
    "cb/e"
    "symlink/a"
  ]
  results = glob("!b**/*",
    cwd: "a"
  , (er, results) ->
    throw er  if er
    t.same results, expect
    t.end()
    return
  )
  return

