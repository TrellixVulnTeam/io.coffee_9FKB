# vim: set softtabstop=16 shiftwidth=16:
tap = require("tap")
readJson = require("../")
path = require("path")
fs = require("fs")
console.error "BOM test"
tap.test "BOM test", (t) ->
  p = path.resolve(__dirname, "fixtures/bom.json")
  readJson p, (er, data) ->
    throw er  if er
    p = path.resolve(__dirname, "fixtures/nobom.json")
    readJson p, (er, data2) ->
      throw er  if er
      t.deepEqual data, data2
      t.end()
      return

    return

  return

