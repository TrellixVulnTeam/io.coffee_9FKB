p = path.resolve(__dirname, "fixtures/readmes/package.json")
expect = {}
expect =
  name: "readmes"
  version: "99.999.999999999"
  readme: "*markdown*\n"
  readmeFilename: "README.md"
  description: "*markdown*"
  _id: "readmes@99.999.999999999"

console.error "readme test"
tap.test "readme test", (t) ->
  readJson p, (er, data) ->
    throw er  if er
    test t, data
