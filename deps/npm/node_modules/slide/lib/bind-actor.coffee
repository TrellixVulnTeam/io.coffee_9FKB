bindActor = ->
  args = Array::slice.call(arguments) # jswtf.
  obj = null
  fn = undefined
  if typeof args[0] is "object"
    obj = args.shift()
    fn = args.shift()
    fn = obj[fn]  if typeof fn is "string"
  else
    fn = args.shift()
  (cb) ->
    fn.apply obj, args.concat(cb)
    return
module.exports = bindActor
