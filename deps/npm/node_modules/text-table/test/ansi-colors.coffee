test = require("tape")
table = require("../")
color = require("cli-color")
ansiTrim = require("cli-color/lib/trim")
test "center", (t) ->
  t.plan 1
  opts =
    align: [
      "l"
      "c"
      "l"
    ]
    stringLength: (s) ->
      ansiTrim(s).length

  s = table([
    [
      color.red("Red")
      color.green("Green")
      color.blue("Blue")
    ]
    [
      color.bold("Bold")
      color.underline("Underline")
      color.italic("Italic")
    ]
    [
      color.inverse("Inverse")
      color.strike("Strike")
      color.blink("Blink")
    ]
    [
      "bar"
      "45"
      "lmno"
    ]
  ], opts)
  t.equal ansiTrim(s), [
    "Red        Green    Blue"
    "Bold     Underline  Italic"
    "Inverse    Strike   Blink"
    "bar          45     lmno"
  ].join("\n")
  return

