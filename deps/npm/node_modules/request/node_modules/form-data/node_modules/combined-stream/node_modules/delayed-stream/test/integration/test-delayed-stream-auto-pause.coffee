common = require("../common")
assert = common.assert
fake = common.fake.create()
DelayedStream = common.DelayedStream
Stream = require("stream").Stream
(testAutoPause = ->
  source = new Stream()
  fake.expect source, "pause", 1
  delayedStream = DelayedStream.create(source)
  fake.verify()
  return
)()
(testDisableAutoPause = ->
  source = new Stream()
  fake.expect source, "pause", 0
  delayedStream = DelayedStream.create(source,
    pauseStream: false
  )
  fake.verify()
  return
)()
