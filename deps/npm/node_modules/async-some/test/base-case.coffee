test = require("tap").test
some = require("../some.js")
test "some() array base case", (t) ->
  failer = (value, cb) ->
    cb new Error("test should never have been called")
    return
  some [], failer, (error, match) ->
    t.ifError error, "ran successfully"
    t.notOk match, "nothing to find, so nothing found"
    t.end()
    return

  return

test "some() arguments arraylike base case", (t) ->
  go = ->
    failer = (value, cb) ->
      cb new Error("test should never have been called")
      return
    some arguments, failer, (error, match) ->
      t.ifError error, "ran successfully"
      t.notOk match, "nothing to find, so nothing found"
      t.end()
      return

    return
  go()
  return

