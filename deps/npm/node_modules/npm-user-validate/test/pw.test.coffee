test = require("tap").test
v = require("../npm-user-validate.js").pw
test "pw contains a '", (t) ->
  err = v("'")
  t.type err, "null"
  t.end()
  return

test "pw contains a :", (t) ->
  err = v(":")
  t.type err, "null"
  t.end()
  return

test "pw contains a @", (t) ->
  err = v("@")
  t.notOk err, "null"
  t.end()
  return

test "pw contains a \"", (t) ->
  err = v("\"")
  t.type err, "null"
  t.end()
  return

test "pw is ok", (t) ->
  err = v("duck")
  t.type err, "null"
  t.end()
  return

