test = require("tap").test
v = require("../npm-user-validate.js").email
test "email misses an @", (t) ->
  err = v("namedomain")
  t.type err, "object"
  t.end()
  return

test "email misses a dot", (t) ->
  err = v("name@domain")
  t.type err, "object"
  t.end()
  return

test "email misses a string before the @", (t) ->
  err = v("@domain")
  t.type err, "object"
  t.end()
  return

test "email is ok", (t) ->
  err = v("name@domain.com")
  t.type err, "null"
  t.end()
  return

