username = (un) ->
  return new Error(requirements.username.lowerCase)  if un isnt un.toLowerCase()
  return new Error(requirements.username.urlSafe)  if un isnt encodeURIComponent(un)
  return new Error(requirements.username.dot)  if un.charAt(0) is "."
  null
email = (em) ->
  return new Error(requirements.email.valid)  unless em.match(/^.+@.+\..+$/)
  null
pw = (pw) ->
  null
exports.email = email
exports.pw = pw
exports.username = username
requirements = exports.requirements =
  username:
    lowerCase: "Username must be lowercase"
    urlSafe: "Username may not contain non-url-safe chars"
    dot: "Username may not start with \".\""

  password: {}
  email:
    valid: "Email must be an email address"
